---
apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: organization
  namespace: {{ tanzu_app_stack.organization.namespace }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: organization
  minReplicas: {{ tanzu_app_stack.organization.min_replicas }}
  maxReplicas: {{ tanzu_app_stack.organization.max_replicas }}
  targetCPUUtilizationPercentage: {{ tanzu_app_stack.organization.target_utilization }}
