---
apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: employee
  namespace: {{ tanzu_app_stack.employee.namespace }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: employee
  minReplicas: {{ tanzu_app_stack.employee.min_replicas }}
  maxReplicas: {{ tanzu_app_stack.employee.max_replicas }}
  targetCPUUtilizationPercentage: {{ tanzu_app_stack.employee.target_utilization }}
